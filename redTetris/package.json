{
  "name": "tetris",
  "version": "1.0.0",
  "description": "a multiplayer tetris game",
  "main": "index.js",
  "scripts": {
    "start": "npm run build",
    "build": "webpack -d && cp src/index.html dist/index.html && webpack-dev-server --content-base src/ --inline --hot",
    "build:prod": "webpack -p && cp src/index.html dist/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DamianOdendaal/red-tetris.git"
  },
  "author": "Damian",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DamianOdendaal/red-tetris/issues"
  },
  "homepage": "https://github.com/DamianOdendaal/red-tetris#readme",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "babel-loader": "^8.1.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "build": "node --max_old_space_size=8192 <entry_file_path> --progress --env.<dev/prod>"
}
